<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.spb.designedBy239School.advancedMusicPlayer.MainActivity" android:orientation="vertical">

    <TextView
            android:text="MY PLAYLIST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/MyPlayListText"
            android:gravity="center"
            android:textSize="30dp"
    />
    <Button
            android:text="←TO PLAYER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ToPlayerActivity"/>
    <Button
            android:text="TO PLAYLISTS→"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ToPlayListActivity"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <ListView android:layout_width="match_parent"
                  android:id="@+id/MainListView"

                  android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"

    ><Button android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Pause"
             android:id="@+id/Pause"
    />
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:id="@+id/Play"
        />
        <Button android:layout_width="wrap_content"
                android:text="EQ"
                android:layout_height="wrap_content"
                android:id="@+id/Equalizer_button"
        /></LinearLayout>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/image"
    />


</LinearLayout>
