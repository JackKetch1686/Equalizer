<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:context=".EqualizerActivity"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view"
                android:text="some text"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_number_of_bands"
                android:text="some text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_preset"
                android:text="some text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_band_0"
                android:text="some text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
        />

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tex_min_freq"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="some text"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tex_max_freq"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:text = "some text"

        />
    </LinearLayout>
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:id="@+id/eq_seek_bar_0"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
            android:rotation="0"

    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:id="@+id/eq_seek_bar_1"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:id="@+id/eq_seek_bar_2"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:id="@+id/eq_seek_bar_3"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:id="@+id/eq_seek_bar_4"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
    />
</LinearLayout>
