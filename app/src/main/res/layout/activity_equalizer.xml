<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:context=".EqualizerActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background = "@color/colorPrimaryDark"
>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="EQUALIZER"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="40dp"
            android:text_size="60"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "75 Hz (SUB BASS)"
            android:layout_marginLeft = "30dp"
            android:layout_marginTop = "30dp"

    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:id="@+id/eq_seek_bar_0"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "20dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "290 Hz (BASS)"
            android:layout_marginLeft = "30dp"
    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:id="@+id/eq_seek_bar_1"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "20dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "1130 Hz"
            android:layout_marginLeft = "30dp"
    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:id="@+id/eq_seek_bar_2"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "20dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "4400 Hz"
            android:layout_marginLeft = "30dp"
    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:id="@+id/eq_seek_bar_3"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "20dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "13500 Hz"
            android:layout_marginLeft = "30dp"
    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:id="@+id/eq_seek_bar_4"
            android:max="1500"
            android:min="-1500"
            android:progress="0"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "20dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BASSboost(doesnt work)"
            android:layout_marginLeft = "30dp"
    />
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:id="@+id/eq_seek_bar_BASS"
            android:max="1000"
            android:min="0"
            android:progress="0"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "20dp"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/preset_1"
                android:text = "Preset 1"
                android:layout_marginHorizontal="20dp"
                android:background = "color/colorButtonDark"

        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/preset_2"
                android:text = "Preset 2"
                android:layout_marginHorizontal="10dp"
                android:background = "color/colorButtonDark"
        />
    </LinearLayout>
</LinearLayout>
