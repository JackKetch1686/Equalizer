<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="PLAYER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/PlayerActivityText"
                android:gravity="center"
                android:textSize="50dp"
        />
        <TextView
                android:text="CurrentSongNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/CurrentSongNameText"
                android:gravity="center"
                android:textSize="30dp"
        />
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ToEqualizerActivity"
                android:text="← To Equalizer Activity"/>
        <Button
                android:text="Back To Main Activity →"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/BackToMainActivityFromPlayerActivity"/>
        <TextView
                android:text="START STOP ETC"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/TextOfStartStopButtons"
                android:gravity="center"
                android:textSize="100dp"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>