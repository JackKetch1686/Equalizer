<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaylistActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="36dp"
            tools:layout_editor_absoluteX="16dp">
        <TextView
                android:text="PLAYLIST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/PlayListText"
                android:gravity="center"
                android:textSize="30dp"

        />
        <Button
                android:text="← back_To_Main_Activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ToMainActivity"/>
        <Button
                android:text="Play_List_Settings_Activity →"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/goToPlayListSettingsActivity"/>
        <ListView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/PlayListListView"
                  android:gravity="center_horizontal"></ListView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>